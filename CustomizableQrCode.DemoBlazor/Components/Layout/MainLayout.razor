@inherits LayoutComponentBase
<!-- Diferir Bootstrap y FontAwesome -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/.../bootstrap-icons.min.css"
      media="print" onload="this.media='all'">
<noscript><link rel="stylesheet" href="https://cdn.jsdelivr.net/.../bootstrap-icons.min.css"></noscript>

<header class="main-header glass-header" role="banner">
    <div class="header-content">
        <!-- Logo -->
        <a href="/" class="logo" aria-label="Ir al inicio">
            <img src="/img/logo/QrBoxLogoBcoW.webp"
                 class="img-responsive"
                 width="120" height="80"
                 alt="Logo QRBox"
                 fetchpriority="high"
                 loading="eager" />
        </a>

        <!-- Menú desktop -->
        <nav class="nav-menu" role="navigation" aria-label="Menú principal (desktop)">
            <a href="/">Inicio</a>
            <a href="/privacidad">Privacidad</a>
            <a href="/terminos">Términos</a>
            <a href="/contacto" class="btn-nav">Contacto</a>
        </nav>

        <!-- Botón burger -->
        <button class="burger" id="burgerBtn" aria-label="Abrir menú móvil" aria-expanded="false" aria-controls="mobileMenu">
            &#9776;
        </button>
    </div>

    <!-- Menú móvil -->
    <nav class="mobile-menu" id="mobileMenu" role="navigation" aria-label="Menú principal (móvil)" aria-hidden="true">
        <button class="close-btn" id="closeMenuBtn" aria-label="Cerrar menú">&times;</button>
        <a href="/">Inicio</a>
        <a href="/privacidad">Privacidad</a>
        <a href="/terminos">Términos</a>
        <a href="/contacto" class="btn-nav">Contacto</a>
    </nav>

    <!-- Overlay -->
    <div class="menu-overlay" id="menuOverlay" aria-hidden="true"></div>
</header>

<div class="header-shadow-blue"></div>

<main class="main-body" role="main">

    <!-- Hero Section -->
